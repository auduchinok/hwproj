$('#chat-id').html("<%= escape_javascript(render 'chat') %>");
$('#chat-id').slideToggle("fast");

var chat_on = $('#chat-button').text() == 'Показать чат'
if (chat_on)
{
  $('#chat-button').text('Скрыть чат');
  $('html, body').animate({
          scrollTop: $("#new_message").offset().top
      }, 500);
}
else
{
  $('#chat-button').text('Показать чат');
}
