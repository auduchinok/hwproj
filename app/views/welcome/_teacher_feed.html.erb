<div class="row">
  <div class="col-md-8">
    <h5> Непроверенных задач в актуальных семестрах: <%= @tasks_left %> </h5>
    <h3>Новости</h3>
    <% if @notifications.empty? %>
      <h4>Нет новостей.</h4>
    <% else %>
    	<div id = "notifications">
        <%= render @notifications %>
      </div>   
      <%= will_paginate @notifications, :inner_window => 2, :outer_window => 1 %>
    <% end %>
  </div>
</div>
