<%= render 'course_info' %>

<div class="row">
  <div class="col-md-12">
    <%= render 'tabs' %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <td align="center"><strong> <%= "Статистика" %> </strong></td>
        <td class="separator"></td>

        <td align="center"><strong> <%= "Все семестры" %> </strong></td>

        <% @terms.each do |term| %>
          <td align="center"><strong> <%= "#{term.number} семестр" %> </strong></td>
        <% end %>
      </tr>
    </thead>

  <%= statistics_line("Комментариев к задачам", @notes, @notes_total) %>

  <%= statistics_line("Принято задач", @accepted_tasks, @accepted_tasks_total) %>

  <%= statistics_line("Сдано с первого раза", @first_try_accepted_tasks, @first_try_accepted_tasks_total) %>

  <%= statistics_line("Попыток сдать задачи", @attempts_to_pass, @attempts_to_pass_total) %>

  <%= statistics_line("Максимальное число попыток сдать одну задачу ", @max_attempts, @max_attempts_total) %>

  <%= statistics_line("Задача с минимальным количеством попыток", @problems_with_min_attempts_to_pass, '') %>

  <%= statistics_line("Задача с максимальным количеством попыток", @problems_with_max_attempts_to_pass, '') %>

  </table>
</div>

